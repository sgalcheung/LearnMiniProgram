<!--pages/cart/childCpns/w-cart-list-item/w-cart-list-item.wxml-->
<view class="cart-list-item">
  <view class="item-icon">
    <w-check-icon bind:tap="onCheckClick" 
                  data-index="{{index}}"
                  isChecked="{{goods.checked}}"/>
  </view>
  <view class="item-img">
    <image class="image" src="{{goods.imageURL}}" mode="aspectFill"/>
  </view>
  <view class="item-info">
    <view class="title">{{goods.title}}</view>
    <view class="desc">{{goods.desc}}</view>
    <view class="price-count">
      <view class="price">￥{{goods.price}}</view>
      <view class="count">￥{{goods.count}}</view>
    </view>
  </view>
</view>
